@model IEnumerable<CTL.WEB.Areas.Admin.Models.TypeWorkViewModel>
@{
    ViewBag.Title = "Види робіт";
}

<h2>@ViewBag.Title</h2>
<h4>Список видів робіт <span class="badge">@Model.Count()</span></h4>
<hr />
@Html.ActionLink("На головну", "Index", new { area = "Admin", controller = "Home" }, new { @class = "btn btn-default", role = "button" })
@Html.ActionLink("Створити", "CreateTypeWork", new { area = "Admin", controller = "InputDataTypeWork" }, new { @class = "btn btn-primary", role = "button" })
<hr />

<div class="table-responsive">
    <table class="table table-hover table-bordered table-condensed">
        <tr>
            <th>#</th>
            <th>Вид роботи</th>
            <th></th>
        </tr>

        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        @Html.ActionLink("Редагувати", "EditTypeWork", new { id = item.Id }, new { @class = "btn btn-info btn-xs btn-block", role = "button" })
                        @Html.ActionLink("Видалити", "DeleteTypeWork", new { id = item.Id }, new { @class = "btn btn-danger btn-xs btn-block", role = "button" })
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td> - </td>
                <td> - </td>
                <td> - </td>
            </tr>
        }

    </table>
</div>