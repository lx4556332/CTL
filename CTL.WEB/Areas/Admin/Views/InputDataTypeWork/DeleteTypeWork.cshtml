@model CTL.WEB.Areas.Admin.Models.TypeWorkViewModel
@{
    ViewBag.Title = "Види робіт";
}

<h2>@ViewBag.Title</h2>
<h4>Видалити дані про вид роботи</h4>

<hr />
@Html.ActionLink("Повернутися", "Index", new { area = "Admin", controller = "InputDataTypeWork" }, new { @class = "btn btn-default", role = "button" })
<hr />

<h4>Ви впевнені, що хочете видалати вид роботи @Model.Name?</h4>
<br />

@using (Html.BeginForm("DeleteTypeWork", "InputDataTypeWork", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })

    @Html.Hidden("Id", Model.Id)

    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-success" value="Видалити" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}