@model IEnumerable<CTL.WEB.Areas.Admin.Models.FacultyViewModel>
@{
    ViewBag.Title = "Факультет";
}

<h2>@ViewBag.Title</h2>
<h4>Список факультетів</h4>
<hr />
@Html.ActionLink("На головну", "Index", new { area = "Admin", controller = "Home" }, new { @class = "btn btn-default", role = "button" })
@Html.ActionLink("Створити", "CreateFaculty", new { area = "Admin", controller = "InputDataFaculty" }, new { @class = "btn btn-default", role = "button" })
<hr />
<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>Назва факультету</th>
        <th>Повна назва факультету</th>
        <th></th>
    </tr>

    @if (Model.Any())
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.FullName</td>

                <td>
                    @Html.ActionLink("Редагувати", "EditFaculty", new { id = item.Id }) |
                    @Html.ActionLink("Видалити", "DeleteFaculty", new { id = item.Id })
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td> - </td>
            <td> - </td>
            <td> - </td>
        </tr>
    }

</table>

