@model CTL.WEB.Areas.Admin.Models.CathedraViewModel

@{
    ViewBag.Title = "Кафедра";
}

<h2>@ViewBag.Title</h2>
<h4>Створити нову кафедру</h4>
<hr />
@Html.ActionLink("Повернутися", "Index", new { area = "Admin", controller = "InputDataCathedra" }, new { @class = "btn btn-default", role = "button" })
<hr />

@using (Html.BeginForm("CreateCathedra", "InputDataCathedra", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.FullName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.FacultyName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.FacultyId , ViewBag.FacultyList as IEnumerable<SelectListItem>, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-success" value="Створити" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}