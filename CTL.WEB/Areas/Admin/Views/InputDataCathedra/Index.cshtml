@model IEnumerable<CTL.WEB.Areas.Admin.Models.CathedraViewModel>
@{
    ViewBag.Title = "Кафедра";
}

<h2>@ViewBag.Title</h2>
<h4>Список кафедр</h4>
<hr />
@Html.ActionLink("На головну", "Index", new { area = "Admin", controller = "Home" }, new { @class = "btn btn-default", role = "button" })
@Html.ActionLink("Створити", "CreateCathedra", new { area = "Admin", controller = "InputDataCathedra" }, new { @class = "btn btn-default", role = "button" })
<hr />
<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>Назва кафедри</th>
        <th>Повна назва кафедри</th>
        <th>Факультет</th>
        <th></th>
    </tr>
    @if (Model.Any())
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.FullName</td>
                <td>@item.FacultyName</td>

                <td>
                    @Html.ActionLink("Редагувати", "EditCathedra", new { id = item.Id }) |
                    @Html.ActionLink("Видалити", "DeleteCathedra", new { id = item.Id })
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td> - </td>
            <td> - </td>
            <td> - </td>
            <td> - </td>
        </tr>
    }
    
</table>