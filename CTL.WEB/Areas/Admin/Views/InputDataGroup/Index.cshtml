@model IEnumerable<CTL.WEB.Areas.Admin.Models.GroupViewModel>
@{
    ViewBag.Title = "Група";
}

<h2>@ViewBag.Title</h2>
<h4>Список груп <span class="badge">@Model.Count()</span></h4>
<hr />
@Html.ActionLink("На головну", "Index", new { area = "Admin", controller = "Home" }, new { @class = "btn btn-default", role = "button" })
@Html.ActionLink("Створити", "CreateGroup", new { area = "Admin", controller = "InputDataGroup" }, new { @class = "btn btn-primary", role = "button" })
<hr />

<div class="panel panel-default">
    <div class="table-responsive">
        <table class="table table-hover table-bordered table-condensed">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Назва групи</th>
                    <th>Бюджет</th>
                    <th>Контракт</th>
                    <th>Заг. студентів</th>
                    <th>Форма навчання</th>
                    <th>Тип навчання</th>
                    <th>Курс</th>
                    <th>ОКР</th>
                    <th>Кафедра</th>
                    <th></th>
                </tr>
            </thead>
            
            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.StudentsCountBudget</td>
                            <td>@item.StudentsCountContract</td>
                            <td>@item.StudentsCountTotal</td>
                            <td>@item.EducationForm</td>
                            <td>@item.EducationType</td>
                            <td>@item.Course</td>
                            <td>@item.QualificationLevelName</td>
                            <td>@item.CathedraName</td>

                            <td>
                                @Html.ActionLink("Редагувати", "EditGroup", new { id = item.Id }, new { @class = "btn btn-info btn-xs btn-block", role = "button" })
                                @Html.ActionLink("Видалити", "DeleteGroup", new { id = item.Id }, new { @class = "btn btn-danger btn-xs btn-block", role = "button" })
                            </td>
                        </tr>
                    </tbody>
                }
            }
            else
            {
                <tr>
                    <td> - </td>
                    <td> - </td>
                    <td> - </td>
                    <td> - </td>
                    <td> - </td>
                    <td> - </td>
                    <td> - </td>
                    <td> - </td>
                    <td> - </td>
                    <td> - </td>
                    <td> - </td>
                </tr>
            }
        </table>
    </div>
</div>
