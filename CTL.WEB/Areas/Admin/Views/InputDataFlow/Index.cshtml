@model IEnumerable<CTL.WEB.Areas.Admin.Models.FlowViewModel>
@{
    ViewBag.Title = "Потік";
}

<h2>@ViewBag.Title</h2>
<h4>Список потоків <span class="badge">@Model.Count()</span></h4>

<hr />
@Html.ActionLink("На головну", "Index", new { area = "Admin", controller = "Home" }, new { @class = "btn btn-default", role = "button" })
@Html.ActionLink("Створити", "CreateFlow", new { area = "Admin", controller = "InputDataFlow" }, new { @class = "btn btn-primary", role = "button" })
<hr />

<div class="panel panel-default">
    <div class="table-responsive">
        <table class="table table-hover table-bordered table-condensed">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Назва</th>
                    <th>Бюджет</th>
                    <th>Контракт</th>
                    <th>Підгруп бюджет</th>
                    <th>Підгруп контракт</th>
                    <th>Тип навчання</th>
                    <th>Форма навчання</th>
                    <th></th>
                </tr>
            </thead>

            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <tbody>
                        <tr class="text-capitalize">
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.AllCountBudget</td>
                            <td>@item.AllCountContract</td>
                            <td>@item.CountSubGroupBudget</td>
                            <td>@item.CountSubGroupContract</td>
                            <td>@item.EducationType</td>
                            <td>@item.EducationForm</td>

                            <td>
                                @Html.ActionLink("Редагувати", "EditFlow", new { id = item.Id }, new { @class = "btn btn-info btn-xs btn-block", role = "button" })
                                @Html.ActionLink("Видалити", "DeleteFlow", new { id = item.Id }, new { @class = "btn btn-danger btn-xs btn-block", role = "button" })
                            </td>
                        </tr>
                    </tbody>
                }
            }
            else
            {
                <tr>
                    <td> - </td>
                    <td> - </td>
                    <td> - </td>
                    <td> - </td>
                    <td> - </td>
                    <td> - </td>
                    <td> - </td>
                    <td> - </td>
                    <td> - </td>
                </tr>
            }

        </table>
    </div>
</div>
