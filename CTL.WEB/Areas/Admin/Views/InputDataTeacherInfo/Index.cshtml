@model IEnumerable<CTL.WEB.Areas.Admin.Models.TeacherInfoViewModel>
@{
    ViewBag.Title = "Викладачі";
}

<h2>@ViewBag.Title</h2>
<h4>Список викладачів <span class="badge">@Model.Count()</span></h4>
<hr />
@Html.ActionLink("На головну", "Index", new { area = "Admin", controller = "Home" }, new { @class = "btn btn-default", role = "button" })
@Html.ActionLink("Створити", "CreateTeacherInfo", new { area = "Admin", controller = "InputDataTeacherInfo" }, new { @class = "btn btn-primary", role = "button" })
<hr />

<div class="panel panel-default">
    <div class="table-responsive">
        <table class="table table-hover table-bordered table-condensed">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Прізвище</th>
                    <th>Ім'я</th>
                    <th>По-батькові</th>
                    <th>Ініціали</th>
                    <th>Посада</th>
                    <th>Ступінь</th>
                    <th>Звання</th>
                    <th>Кафедра</th>
                    <th>Сума</th>
                    <th></th>
                </tr>
            </thead>

            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.LastName</td>
                            <td>@item.Name</td>
                            <td>@item.MiddleName</td>
                            <td>@item.Initials</td>
                            <td>@item.AppointmentName</td>
                            <td>@item.DegreeName</td>
                            <td>@item.RankName</td>
                            <td>@item.CathedraName</td>
                            <td>@item.Allowance</td>

                            <td>
                                @Html.ActionLink("Редагувати", "EditTeacherInfo", new { id = item.Id }, new { @class = "btn btn-info btn-xs btn-block", role = "button" })
                                @Html.ActionLink("Видалити", "DeleteTeacherInfo", new { id = item.Id }, new { @class = "btn btn-danger btn-xs btn-block", role = "button" })
                            </td>
                        </tr>
                    </tbody>
                }
            }
            else
            {
                <tr>
                    <td> - </td>
                    <td> - </td>
                    <td> - </td>
                    <td> - </td>
                    <td> - </td>
                    <td> - </td>
                    <td> - </td>
                    <td> - </td>
                    <td> - </td>
                    <td> - </td>
                    <td> - </td>
                </tr>
            }
        </table>
    </div>
</div>
